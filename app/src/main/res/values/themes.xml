<resources>

    <style name="Theme.TreeSpot" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/md_black_1000</item>

    </style>

    <style name="Theme.TreeSpot.Button" parent="Widget.MaterialComponents.Button">
        <item name="color">@color/primaryColor</item>
    </style>

    <style name="Theme.TreeSpot.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="tint">@color/primaryDarkColor</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Theme.TreeSpot.ImageButton.Alt" parent="Widget.AppCompat.ImageButton">
        <item name="tint">@color/md_white_1000</item>
        <item name="android:background">@color/primaryDarkColor</item>
    </style>

    <style name="Theme.TreeSpot.Button.Alt" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryDarkColor</item>
        <item name="itemIconTint">@color/md_white_1000</item>
        <item name="itemTextColor">@color/md_white_1000</item>
    </style>

    <style name="Theme.TreeSpot.CircleProgress" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="trackThickness">10dp</item>
        <item name="indicatorSize">90dp</item>
    </style>

    <style name="Theme.TreeSpot.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="itemIconTint">@color/md_white_1000</item>
        <item name="itemTextColor">@color/md_white_1000</item>
    </style>

    <style name="Theme.TreeSpot.Text">
        <item name="startIconTint">@color/primaryDarkColor</item>
        <item name="endIconTint">@color/primaryLightColor</item>
    </style>

    <style name="Theme.TreeSpot.Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>
</resources>